<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.MainPage"
             x:Name="Page">

    <AbsoluteLayout BackgroundColor="AntiqueWhite">
        <Image x:Name="sourceImg" Source="camera.png" AbsoluteLayout.LayoutBounds="140,290,100,150">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="uploadButton_Clicked" />
            </Image.GestureRecognizers>
        </Image>
        <Label x:Name="reportLabel" IsVisible="False" AbsoluteLayout.LayoutBounds="140,550,100,150"/>
        <ActivityIndicator x:Name="loader" IsVisible="False" IsRunning="False" AbsoluteLayout.LayoutBounds="140,290,100,150"/>
    </AbsoluteLayout>

</ContentPage>
